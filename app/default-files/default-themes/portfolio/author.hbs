{{> head}}
    <body>
        {{{@bodyCustomCode}}}
        <div class="container">
            <header class="js-top is-sticky">
                <a class="logo" href="{{@website.url}}">
                    {{#if @website.logo}}
                        <img src="{{@website.logo}}" alt="{{@website.name}}">
                    {{else}}
                        {{@website.name}}
                    {{/if}}
                </a>
                <div class="top">
                    {{> menu menus.mainMenu}}
                    {{> search}}
                </div>
            </header>
            <main>
                <section class="hero hero--author">
                    <header class="hero--author__wrap">
                        {{#author}}
                            {{#if avatar}}
                                <img src="{{avatar}}" alt="{{name}}" class="hero--author__avatar">
                            {{/if}}
                            <div>
                                <h1 class="hero__title hero--author__title">
                                    {{name}}
                                    <sup>({{postsNumber}})</sup>
                                </h1>
                                {{#if description}}
                                    <p class="hero--author__desc">
                                        {{description}}
                                    </p>
                                {{/if}}
                            </div>
                        {{/author}}
                    </header>
                </section>
                <div class="category {{@config.custom.layoutAuthor}}">
                    {{#each posts}}
                        <article>
                            {{#featuredImage}}
                                {{#if @config.custom.lazyLoad}}
                                    <figure class="category__image">
                                        <a href="{{../url}}">
                                            <img
                                                class="lazyload"
                                                {{#checkIf @config.custom.lazyLoadEffect '!==' "lqip" }}
                                                   src="{{urlXs}}" 
                                                {{else}}
                                                   data-src="{{url}}"  
                                                {{/checkIf}}
                                                data-srcset="{{srcset.post}}"
                                                data-sizes="auto"
                                                data-expand="300"
                                                height="{{height}}" 
										        width="{{width}}"
                                                alt="{{alt}}">
                                        </a>
                                    </figure>
                                {{else}}
                                    <figure class="category__image">
                                        <a href="{{../url}}">
                                            <img
                                                src="{{url}}"
                                                sizes="{{sizes.post}}"
                                                srcset="{{srcset.post}}"
												height="{{height}}" 
										        width="{{width}}"
                                                alt="{{alt}}">
                                        </a>
                                    </figure>
                                {{/if}}
                            {{/featuredImage}}
                            <header class="category__header">
                                <p>
                                    <time datetime="{{date createdAt 'YYYY-MM-DDTHH:mm'}}">
                                {{#checkIf @config.custom.formatDate '!=' 'custom'}}
                                    {{date createdAt @config.custom.formatDate}}
                                {{else}}
                                    {{date createdAt @config.custom.formatDateCustom}}
                                {{/checkIf}}
                            </time>
                                </p>
                                <h2>
                                    <a href="{{url}}">{{title}}</a>
                                </h2>
                            </header>
                            {{#if hasCustomExcerpt}}
                                <div class="category__entry">
                                    {{{excerpt}}}
                                </div>
                            {{else}}
                                <p class="category__entry">
                                    {{{excerpt}}}
                                 </p>
                            {{/if}}
                            <a href="{{url}}" class="category__btn">{{ translate 'common.readmore' }}</a>
                        </article>
                    {{/each}}
                </div>
                {{> pagination}}
            </main>
            {{> footer}}