<div class="container">
    <header class="js-top">
        <a class="logo" href="{{@website.url}}">
            {{#if @website.logo}}
                <img src="{{@website.logo}}" alt="{{@website.name}}">
            {{else}}
                {{@website.name}}
            {{/if}}
        </a>
        {{#if @config.custom.search}}
            <button class="search-btn" aria-label="{{ translate 'search.title' }}">
                <svg role="presentation" focusable="false">
                    <use xlink:href="{{@website.assetsUrl}}/svg/svg-map.svg#search"/>
                </svg>
            </button>
        {{/if}}
        {{#if menus.mainMenu}}
            {{> menu menus.mainMenu}}
        {{/if}}
    </header>
