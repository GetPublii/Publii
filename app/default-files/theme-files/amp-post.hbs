{{> amp-head}}

    <main class="wrap-page">
        {{#post}}
        <article class="post">
            
            {{#featuredImage}}
                {{#if url}}
                <figure class="post-featured-image">
                    <amp-img
                        src="{{url}}"
                        alt="{{alt}}"
                        {{#if srcset.amp}}
                            srcset="{{srcset.amp}}"
                        {{else}}
                            {{#if srcset}}
                            srcset="{{srcset}}"
                            {{/if}}
                        {{/if}}
                        {{#if sizes.amp}}
                            sizes="{{sizes.amp}}"
                        {{else}}
                            {{#if sizes}}
                            sizes="{{sizes}}"
                            {{/if}}
                        {{/if}}
                        height="{{height}}"
                        layout="responsive"
                        width="{{width}}">
                    </amp-img>
                    {{#checkIfAny caption credits}}
                    <figcaption>
                        {{caption}} {{credits}}
                    </figcaption>
                    {{/checkIfAny}}
                    </figure>
                {{/if}}
            {{/featuredImage}}
            
            <div class="wrap-inner">
              <header class="post-header">
                <h1> {{title}} </h1>
                <p class="post-meta"> 
                    {{#author}}
                    by <a href="{{url}}" rel="nofollow" title="{{name}}">{{name}}</a>
                    {{/author}} 
                    <time datetime="{{date createdAt 'YYYY-MM-DDTHH:mm'}}">
                        {{date createdAt @config.custom.formatDate}}
                    </time>
                </p>
            </header>

            {{{text}}}
            
             <aside>
                {{#if tags}}
                   <ul class="post-tag">                   
                     {{#each tags}}
                       <li>
                           <a href="{{url}}">{{name}}</a>
                        </li>
                     {{/each}}
                  </ul>
               {{/if}}
               {{#if @amp.shareButtons}}
                  <div class="post-share">
                     {{> amp-share-buttons}}
                  </div>
               {{/if}}
             </aside>
            </div>
        </article>
        
        {{/post}}

    </main>
{{> amp-footer}}
